<h1>Artist Overview</h1>

<div>
  <h3>Sorting options</h3>
  <ul>
    <li><%= link_to "Name ASC", :sort => "name", :direction => "asc" %></li>
    <li><%= link_to "Name DESC", :sort => "name", :direction => "desc" %></li>
    <li><%= link_to "Date of creation ASC", :sort => "created_at", :direction => "asc" %></li>
    <li><%= link_to "Date of creation DESC", :sort => "created_at", :direction => "desc" %></li>
  </ul>
</div>

<hr>

<div>
  <ul>
    <% @artists.each do |artist| %>
      <li>
        <h4><%= link_to artist.name, artist_path(artist) %></h4>
        <p><%= image_tag artist.image_url, class: "artist-img" %>
        <p><%= artist.genre %></p>
      </li>
    <% end %>
  </ul>
</div>
