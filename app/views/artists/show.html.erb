<div class="container-fluid">
  <div class="content-wrapper">
		<div class="item-container">
  		<div class="container">
	  		<div class="col-md-12">
		  		<div class="col-md-5">
            <%= image_tag @artist.image_url, class: "artist-image" %>
          </div>

  				<div class="col-md-7">
	    			<div class="artist-title"><h1><%= @artist.name %></h1></div>
			    	<div class="artist-genre"><%= @artist.genre %></div>
          </div>
			  </div>
		  </div>
      <div class="container">
	  		<div class="col-md-12">
		  		<h2>List of songs</h2>
            <% @artist.songs.each do |song| %>
              <ul>
                <li>
                  <p><%= song.name %></p>
                  <p>Year of release: <%= song.release_year %></p>
                  <button type="button" class="btn btn-success">
                    <%= link_to "Delete", [@artist, song], method: :delete, data: { confirm: "Are you sure?" } %>
                  </button>
                </li>
              </ul>
            <% end %>
			  </div>
		  </div>
	  </div>
  </div>
</div>
